<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.ssafy.hotplace.model.mapper.HotplaceMapper">

	<!-- 2. resultMap 설정 -->
	<resultMap type="hotplaceDto" id="hotplace">
		<result column="hotplace_no" property="hotplaceNo" />
		<result column="user_no" property="userNo" />
		<result column="hotplace_name" property="hotplaceName" />
		<result column="hotplace_addr" property="hotplaceAddr"/>
		<result column="category" property="category" />
		<result column="hotplace_content" property="hotplaceContent" />
		<result column="jibun" property="jibun" />
		<result column="latitude" property="latitude" />
		<result column="longitude" property="longitude" />
		<result column="img" property="img" />
	</resultMap>
	
	<!-- 핫플레이스 등록 -->
	<insert id="insert">
		insert into hotplace (user_no, hotplace_name, hotplace_addr, category, hotplace_content, jibun, latitude, longitude, img)
		values (#{userNo}, #{hotplaceName}, #{hotplaceAddr}, #{category}, #{hotplaceContent}, #{jibun}, #{latitude}, #{longitude}, #{img})
	</insert>

</mapper>

